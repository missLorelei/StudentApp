@{ List<Subject> ListSubjects = ViewBag.Subjects; }
@model StudentAppAdo.Models.Subject 


<a class="btn btn-default btn-sm" href="CreateSubject"> Add Subject</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Control</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subj in ListSubjects)
        {
            <tr>
                <td>@subj.Id</td>
                <td>@subj.Name</td>
                <td>
                    @using (Html.BeginForm("List", "Subject", FormMethod.Post))
                    {
                        <input type="hidden" value="@subj.Id" name="Id" />
                        <button type="submit" class="btn default btn-sm">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
