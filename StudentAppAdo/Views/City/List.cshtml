@{ List<City> ListCities = ViewBag.Cities; }
@model StudentAppAdo.Models.City
    
    <a class="btn btn-default btn-sm" href="CreateCity"> Add City</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Control</th>
        </tr>
    </thead>
    <tbody>
@foreach (var city in ListCities)
{
    <tr>
        <td>@city.Id</td>
        <td>@city.Name</td>
            <td>
            @using (Html.BeginForm("List", "City", FormMethod.Post))
            {
                <input type="hidden" value="@city.Id" name="Id" />
                <button type="submit" class="btn default btn-sm">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            }
        </td>
    </tr>


}
        
           
        
    </tbody>
</table>

